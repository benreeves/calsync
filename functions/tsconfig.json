{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6",
      "es2017",
      "es2018",
      "esnext",
    ],
    "module": "commonjs",
    // "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
